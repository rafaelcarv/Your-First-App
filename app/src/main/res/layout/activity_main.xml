<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.udacity.yourfirstapp.MainActivity">


    <ScrollView
        style="@android:style/Widget.ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="5dip"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Hamilton's Bakery and Coffee"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="11dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/banner2" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView4"
                android:stretchColumns="2"
                android:layout_alignParentStart="true">
                <TableRow
                    android:padding="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Description"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="0dip"
                        android:text="The best bakery and Coffee shop in New York City" />
                </TableRow>

                <TableRow
                    android:padding="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_column="0"
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Information"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <TextView
                        android:layout_column="1"
                        android:id="@+id/textView2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="555-555-555" />
                </TableRow>
                <TableRow
                    android:padding="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_column="0"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="146th and Broadway" />
                </TableRow>
                <TableRow
                    android:padding="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_column="0"
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hours of operation"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:width="0dip"
                        android:text="Everyday from 5am to 10pm" />
                </TableRow>
            </TableLayout>


        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
